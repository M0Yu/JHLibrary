<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lyz.jhlibrary.MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/jhun_image" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="图书馆借阅系统"
        android:textColor="#ffff0000"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/main_userName"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/user"
        android:ems="10"
        android:hint="请输入用户名"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/main_passWord"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/main_userName"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/password"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/main_passWord"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/main_valCode"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="2"
            android:background="@drawable/password"
            android:ems="10"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <ImageView
            android:id="@+id/main_codeImg"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/main_loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_selector"
        android:text="登录"
        android:textColor="#ffffff" />

</RelativeLayout>